<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.InformationChangeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_avatar_change_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backImageView_avatar_change_fragment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_arrow_icon" />

        <TextView
            android:id="@+id/titleTextView_avatar_change_fragment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/avatar_settings"
            android:layout_marginStart="30dp"
            android:textSize="30sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="@string/username"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_avatar_change_fragment" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/description_textbox"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/usernameChangeEditText_information_change_fragment"
        app:layout_constraintStart_toStartOf="@+id/usernameChangeEditText_information_change_fragment"
        app:layout_constraintTop_toBottomOf="@+id/usernameChangeEditText_information_change_fragment" />

    <EditText
        android:id="@+id/usernameChangeEditText_information_change_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_input_selector"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/descriptionChangeEditText_information_change_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_input_selector"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/saveChangeButton_information_change_fragment"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="@+id/descriptionChangeEditText_information_change_fragment"
        app:layout_constraintStart_toStartOf="@+id/descriptionChangeEditText_information_change_fragment"
        app:layout_constraintTop_toBottomOf="@+id/descriptionChangeEditText_information_change_fragment" />


</androidx.constraintlayout.widget.ConstraintLayout>