<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userAvatarImageView_chat_to_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:civ_border_width="2dp"
        android:src="@drawable/avatar_icon"
        app:civ_border_color="?colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/messageTextView_chat_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:autoLink="web"
        android:background="@drawable/text_rounded_right_corner"
        android:backgroundTint="?attr/colorTertiaryContainer"
        android:maxWidth="240dp"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/userAvatarImageView_chat_to_row"
        app:layout_constraintTop_toBottomOf="@+id/messageSendDate_chat_to_row" />

    <TextView
        android:id="@+id/messageSendDate_chat_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/userAvatarImageView_chat_to_row"
        app:layout_constraintTop_toTopOf="@+id/userAvatarImageView_chat_to_row" />

</androidx.constraintlayout.widget.ConstraintLayout>